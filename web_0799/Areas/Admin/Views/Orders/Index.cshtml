@model IEnumerable<web_0799.Models.Order>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">Danh sách đơn hàng</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Tạo đơn hàng mới
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.OrderDate)</th>
                    <th>@Html.DisplayNameFor(model => model.TotalPrice)</th>
                    <th>@Html.DisplayNameFor(model => model.ShippingAddress)</th>
                    <th>@Html.DisplayNameFor(model => model.Notes)</th>
                    <th>Người đặt hàng</th>
                    <th class="text-center">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.TotalPrice.ToString("N0") đ</td>
                        <td>@item.ShippingAddress</td>
                        <td>@item.Notes</td>
                        <td>@item.ApplicationUser?.UserName</td>
                        <td class="text-center">
                            @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>Edit
                            </a> *@
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1">
                                <i class="bi bi-eye"></i>Details
                            </a>
                            @* <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Bạn có chắc muốn xóa đơn hàng này?');">
                                <i class="bi bi-trash"></i>Delete
                            </a> *@
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
