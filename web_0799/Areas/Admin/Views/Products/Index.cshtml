@model IEnumerable<web_0799.Models.Product>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Danh sách sản phẩm</h2>

<!-- Add Create Button -->
<p>
    <a asp-action="Create" asp-controller="Products" class="btn btn-primary">Thêm sản phẩm</a>
</p>

<table class="table table-bordered table-hover align-middle text-center">
    <thead class="table-dark">
        <tr>
            <th scope="col">Hình ảnh</th>
            <th scope="col">Tên sản phẩm</th>
            <th scope="col">Giá</th>
            <th scope="col">Mô tả</th>
            <th scope="col">Danh mục</th>
            <th scope="col">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 120px;">
                    <img src="@item.ImageUrl" alt="@item.Name" class="img-thumbnail" style="max-height: 100px;" />
                </td>
                <td>@item.Name</td>
                <td>@item.Price.ToString("N0") đ</td>
                <td class="text-start">@item.Description</td>
                <td>@item.Category?.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-controller="Products" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>