@model web_0799.Models.ApplicationUser

@{
    ViewData["Title"] = "Chi tiết người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Chi tiết người dùng</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 fw-bold">Email</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

                        <dt class="col-sm-3 fw-bold">Họ và tên</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

                        <dt class="col-sm-3 fw-bold">Địa chỉ</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Address) ? "N/A" : Model.Address)</dd>

                        <dt class="col-sm-3 fw-bold">Số điện thoại</dt>
                        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.PhoneNumber) ? "N/A" : Model.PhoneNumber)</dd>

                        <dt class="col-sm-3 fw-bold">Tuổi</dt>
                        <dd class="col-sm-9">@(!string.IsNullOrWhiteSpace(Model.Age) ? Model.Age : "N/A")</dd>

                        <dt class="col-sm-3 fw-bold">Vai trò</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-info">@(ViewBag.UserRole ?? "Không có")</span>
                        </dd>
                    </dl>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="User" asp-controller="Admin" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>