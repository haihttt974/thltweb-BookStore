@model web_0799.Models.Category

@{
    ViewData["Title"] = "Xóa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">Xóa danh mục</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="text-danger mb-4">Bạn có chắc chắn muốn xóa danh mục này?</h4>
                    <dl class="row mb-0">
                        <dt class="col-sm-3 fw-bold">Tên danh mục</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <button type="submit" class="btn btn-danger px-4" onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">
                                <i class="bi bi-trash"></i> Xóa
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>