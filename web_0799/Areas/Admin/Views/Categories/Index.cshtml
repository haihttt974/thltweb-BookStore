@model IEnumerable<web_0799.Models.Category>

@{
    ViewData["Title"] = "Danh sách danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-4">Danh sách danh mục</h2>

<!-- Add Create Button -->
<p>
    <a asp-action="Create" asp-controller="Categories" class="btn btn-primary">Thêm danh mục</a>
</p>

<table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-dark">
        <tr>
            <th>Tên danh mục</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <a asp-action="Edit" asp-controller="Categories" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Details" asp-controller="Categories" asp-route-id="@item.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-controller="Categories" asp-route-id="@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Bạn có chắc muốn xóa danh mục này?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>