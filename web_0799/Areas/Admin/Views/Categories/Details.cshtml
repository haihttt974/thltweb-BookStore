@model web_0799.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">Chi tiết danh mục</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3 fw-bold">Tên danh mục</dt>
                        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>
                    </dl>

                    <div class="d-flex justify-content-end gap-2 mt-4">
                        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4">
                            <i class="bi bi-pencil"></i> Sửa
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="bi bi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>