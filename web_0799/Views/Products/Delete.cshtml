@model web_0799.Models.Product
@{
    ViewData["Title"] = "Delete Product";
}
<h1>Delete Product</h1>
<h4>Are you sure you want to delete this?</h4>
<div>
    <h5>@Model.Name</h5>
    <p><strong>Price:</strong> @Model.Price.ToString("N0")</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" width="200" />
    }
</div>
<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Delete" class="btn btn-danger" />
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
