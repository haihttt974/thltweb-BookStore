@model List<web_0799.Models.Product>

@{
    ViewData["Title"] = "Search Results";
}

<div class="container">
    <h2 class="my-4">Search Results</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info" role="alert">
            No products found matching your search.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @foreach (var product in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">@product.Description</p>
                            <p class="card-text fw-bold text-primary">$@product.Price.ToString("F2")</p>
                            <a asp-controller="Products" asp-action="Display" asp-route-id="@product.Id" class="btn btn-primary">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.card').hover(
                function () {
                    $(this).addClass('shadow').css('transform', 'translateY(-5px)');
                },
                function () {
                    $(this).removeClass('shadow').css('transform', 'translateY(0)');
                }
            );
        });
    </script>
}