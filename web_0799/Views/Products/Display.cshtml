@model web_0799.Models.Product
@{
    ViewData["Title"] = "Product Details";
}

<h2>@Model.Name</h2>

<div class="row mb-4">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-4">Price:</dt>
            <dd class="col-sm-8">@Model.Price.ToString("C")</dd>

            <dt class="col-sm-4">Description:</dt>
            <dd class="col-sm-8">@Model.Description</dd>

            <dt class="col-sm-4">Category:</dt>
            <dd class="col-sm-8">@Model.Category?.Name</dd>
        </dl>
    </div>
    <div class="col-md-6">
        <h5>Main Image:</h5>
        <img src="@Model.ImageUrl" alt="Main Image" style="max-width: 300px;" class="img-thumbnail" />
    </div>
</div>

<hr />

@if (Model.Images != null && Model.Images.Any())
{
    <h4>Gallery Images:</h4>
    <div class="row">
        @foreach (var img in Model.Images)
        {
            <div class="col-md-3 col-sm-4 col-6 mb-3">
                <img src="@img.Url" alt="Product Image" class="img-fluid img-thumbnail" />
            </div>
        }
    </div>
}
else
{
    <p><em>No additional images available.</em></p>
}

<a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
