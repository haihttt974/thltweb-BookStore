@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav ms-auto">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="background-color: #5C4033; border-radius: 5px; padding: 8px 12px;">
                <i class="bi bi-person me-1"></i> Xin chào, @UserManager.GetUserName(User)!
            </a>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li>
                    <a class="dropdown-item text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="bi bi-gear me-2"></i> Quản lý tài khoản
                    </a>
                </li>
                <li>
                    <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                        <button type="submit" class="dropdown-item text-dark border-0 bg-transparent w-100 text-start">
                            <i class="bi bi-box-arrow-right me-2"></i> Đăng xuất
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link btn btn-outline-dark me-2" asp-area="Identity" asp-page="/Account/Register" style="color: #5C4033; border-color: #5C4033;">
                <i class="bi bi-person-plus me-1"></i> Đăng ký
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link btn btn-dark" asp-area="Identity" asp-page="/Account/Login" style="background-color: #5C4033; color: #FFFFFF;">
                <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
            </a>
        </li>
    }
</ul>