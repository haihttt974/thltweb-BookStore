@model int

<form class="d-flex" asp-controller="ShoppingCart" asp-action="Index" method="get">
    <button class="btn btn-outline-dark" type="submit">
        <i class="bi-cart-fill me-1"></i>
        Cart
        @if (Model > 0)
        {
            <span class="badge bg-danger text-white ms-1 rounded-pill">@Model</span>
        }
    </button>
</form>
