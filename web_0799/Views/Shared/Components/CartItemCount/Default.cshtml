@model int

<a asp-controller="ShoppingCart" asp-action="Index" class="btn position-relative text-white">
    <i class="bi bi-cart3 fs-5"></i> Cart
    @if (Model > 0)
    {
        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger shadow-sm">
            @Model
            <span class="visually-hidden">sản phẩm trong giỏ</span>
        </span>
    }
</a>
